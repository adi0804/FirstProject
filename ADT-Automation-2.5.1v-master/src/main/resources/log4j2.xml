<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>

		<!-- Console Appender -->
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{yyyy-MMM-dd HH:mm:ss a} [%t] %-5level %logger{36} - %msg%n" />
		</Console>

		<!-- Rolling File Appender -->
		<RollingFile name="RollingFile">
			<!-- <FileName>/home/ksarvani/QAA/ADT_Files/adt.log</FileName> <FilePattern>/home/ksarvani/QAA/ADT_Files/$${date:yyyy-MM}/app-%d{yyyy-MM-dd}.log.zip 
				</FilePattern> -->

			<!-- <FileName>/home/dkiran/QAA/ADT_Files/logs/adt.log</FileName> <FilePattern>/home/dkiran/QAA/ADT_Files/logs/$${date:yyyy-MM}/app-%d{yyyy-MM-dd}.log.zip 
				</FilePattern> -->

			<FileName>/home/cdsm_adm/QAA/Logs_Offshore/ADTLogs/adt.log</FileName>
			<FilePattern>/home/cdsm_adm/QAA/Logs_Offshore/ADTLogs/$${date:yyyy-MM}/app-%d{yyyy-MM-dd}.log.zip
			</FilePattern>

			<!-- <FileName>/home/nkanuri/ADT/logs/adt.log</FileName> <FilePattern>/home/nkanuri/ADT/logs/$${date:yyyy-MM}/app-%d{yyyy-MM-dd}.log.zip 
				</FilePattern> -->

			<!-- <FileName>C:/Users/nkanuri/Documents/MyJabberFiles/nkanuri@corpimsvcs.com/ADT/logs/app.log 
				</FileName> <FilePattern>C:/Users/nkanuri/Documents/MyJabberFiles/nkanuri@corpimsvcs.com/ADT/logs/$${date:yyyy-MM}/app-%d{yyyy-MM-dd}.log.zip 
				</FilePattern> -->
			<PatternLayout>
				<Pattern>%d{yyyy-MMM-dd HH:mm:ss a} [%t] %-5level %logger{36} -
					%msg%n</Pattern>

			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
				<SizeBasedTriggeringPolicy size="250 MB" />
			</Policies>
			<DefaultRolloverStrategy max="5" />
		</RollingFile>

	</Appenders>
	<Loggers>
		<Logger name="com.optum" level="debug" additivity="false">
			<AppenderRef ref="RollingFile" />
			<AppenderRef ref="Console" />
		</Logger>
		<!-- <Root level="trace"> <AppenderRef ref="Console" /> </Root> -->
	</Loggers>


